<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220132"
    tools:context=".fifthForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/temaThreeZagolovok1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temaThreeZagolovok1"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema3text1"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tema3text1"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="338dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/klasstest"
                    android:background="@drawable/style_pict"/>

                <TextView
                    android:id="@+id/tema3text2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tema3text2"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#30D5C8"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/razbilpochastyam1"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/razbilpochastyam1"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#FFA000"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/razbilpochastyam2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/razbilpochastyam2"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#98FF98"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/razbilpochastyam3"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/razbilpochastyam3"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#FDEAA8"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/razbilpochastyam4"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/razbilpochastyam4"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#08FF00"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/razbilpochastyam5"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/razbilpochastyam5"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#DAA520"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/temaThreeZagolovok2"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaThreeZagolovok2"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema3text3"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tema3text3"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/temaThreeZagolovok3"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaThreeZagolovok3"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/methodcases"
                    android:layout_width="335dp"
                    android:layout_height="324dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/methodcases"
                    android:background="@drawable/style_pict"/>

                <Button
                    android:id="@+id/exitToMenu3"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape2"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Выход в главное меню"
                    android:textColor="#455a64"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>