<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220132"
    tools:context=".thirdForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/temaOneZagolovok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/temaOneZagolovok"
                    android:textAlignment="center"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/beforeGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text1"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/greentext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/polosaleft"
                    android:text="@string/gold"
                    android:textColor="#08FF00"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/afterGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text1part2"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/temaOneZagolovok2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/temaOneZagolovok2"
                    android:textAlignment="center"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/tema1text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text2"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/redText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:textSize="17dp"
                    android:background="@drawable/errortext"
                    android:text="@string/redtext"
                    android:textColor="#30D5C8"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/afterRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/afterred"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/vodopadmodel"
                    android:layout_width="339dp"
                    android:layout_height="362dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/style_pict"
                    app:srcCompat="@drawable/vodopadmodel" />

                <TextView
                    android:id="@+id/temaOneZagolovok3"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/temaOneZagolovok3"
                    android:textAlignment="center"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/tema1text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text3"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/vdiagramm"
                    android:layout_width="340dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/vdiagramm"
                    android:background="@drawable/style_pict"/>

                <TextView
                    android:id="@+id/temaOneZagolovok4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temaOneZagolovok4"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema1text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text4"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/iterationmodel"
                    android:layout_width="338dp"
                    android:layout_height="198dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style_pict"
                    app:srcCompat="@drawable/iterationmodel" />

                <TextView
                    android:id="@+id/temaOneZagolovok5"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaOneZagolovok5"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema1text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text5"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/spiralmodel"
                    android:layout_width="340dp"
                    android:layout_height="344dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/gibkayamodel"
                    android:background="@drawable/style_pict"/>

                <TextView
                    android:id="@+id/temaOneZagolovok6"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaOneZagolovok6"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema1text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema1text6"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/gibkayamodel"
                    android:layout_width="342dp"
                    android:layout_height="352dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style_pict"
                    app:srcCompat="@drawable/spiralmodel" />

                <TextView
                    android:id="@+id/temaOneZagolovok7"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaOneZagolovok7"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/table"
                    android:layout_width="338dp"
                    android:layout_height="489dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/table" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/exitToMenu"

                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/buttonshape2"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Выход в меню"
                        android:textColor="#455a64"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"/>

                    <Button
                        android:id="@+id/transition1"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/buttonshape2"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="@string/transition1"
                        android:textColor="#455a64"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>