<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220132"
    tools:context=".eigthForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/temaSixZagolovok1"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaSixZagolovok1"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tema6text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tema6text1"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/lifecycledefects"
                    android:layout_width="337dp"
                    android:layout_height="176dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style_pict"
                    app:srcCompat="@drawable/lifecycledefects" />

                <TextView
                    android:id="@+id/temaSixZagolovok2"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temaSixZagolovok2"
                    android:textColor="#FDEAA8"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:id="@+id/tema6text2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tema6text2"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/otchetdefects"
                    android:layout_width="342dp"
                    android:layout_height="323dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style_pict"
                    app:srcCompat="@drawable/otchetdefects" />

                <TextView
                    android:id="@+id/tema6text3"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tema6text3"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/exitToMenu6"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape2"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Выход в главное меню"
                    android:textColor="#455a64"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>